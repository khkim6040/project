<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.example.CodeScent</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>CodeScent</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="sch0622@postech.ac.kr" url="https://csed332.postech.ac.kr/4nix/csed332project">4nix</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->

    <description><![CDATA[
        CodeScent is a powerful IntelliJ IDEA plugin that helps developers identify
        and fix common code smells in their Java projects. It provides real-time insights and
        suggestions for improvements.<br>
        <em>Supports Java language.</em>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.java</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">

    </extensions>
    <actions>
        <action id="plugintest" class="Plugintest" text="Plugintest">
            <add-to-group group-id="MainMenu" anchor="first"/>
        </action>

        <action id="detecting.LPL" class="detecting.LongParameterList" text="LongParameterList"
                description="Implementation for LongParameterList">
            <add-to-group group-id="MainMenu" anchor="first"/>
        </action>
        <action id="detecting.ILM" class="detecting.IdentifyLongMethod" text="IdentifyLongMethod"
                description="Implementation for IdentifyLongMethod">
            <add-to-group group-id="MainMenu" anchor="first"/>
        </action>
        <action id="detecting.DLC" class="detecting.DetectLargeClass" text="DetectLargeClass"
                description="Implementation for DetectLargeClass">
            <add-to-group group-id="MainMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>