<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.example.CodeScent</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>CodeScent</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="sch0622@postech.ac.kr" url="https://csed332.postech.ac.kr/4nix/csed332project">4nix</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->

    <description><![CDATA[
        CodeScent is a powerful IntelliJ IDEA plugin that helps developers identify
        and fix common code smells in their Java projects. It provides real-time insights and
        suggestions for improvements.<br>
        <em>Supports Java language.</em>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.java</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Code Scent" anchor="bottom" factoryClass="ui.MyToolWindowFactory"/>
    </extensions>
    <actions>

        <action id="detecting.LPL" class="detecting.LongParameterList" text="LongParameterList"
                description="Implementation for LongParameterList">
            <add-to-group group-id="MainMenu" anchor="first"/>
        </action>

        <action id="detecting.PoorName" class="detecting.PoorName" text="PoorName">
            <add-to-group group-id="MainMenu" anchor="first"/>
        </action>

        <action id="detecting.FindDuplicatedCode" class="detecting.FindDuplicatedCode" text="FindDuplicatedCode">
            <add-to-group group-id="MainMenu" anchor="first"/>
        </action>

        <action id="detecting.ILM" class="detecting.IdentifyLongMethod" text="IdentifyLongMethod"
                description="Implementation for IdentifyLongMethod">
            <add-to-group group-id="MainMenu" anchor="first"/>
        </action>


        <action id="detecting.SS" class="detecting.SwitchStatement" text="SwitchStatement"
                description="Implementation for SwitchStatement">
            <add-to-group group-id="MainMenu" anchor="first"/>
        </action>
        
        <group id="GroupedActions" text="Code Scent" popup="true">
            <add-to-group group-id="MainMenu" anchor="after" relative-to-action="org.intellij.sdk.action.PopupDialogAction"/>
            <action id="Analyze" class="ui.MyToolWindowAction" text="Analyze">
            </action>
            <action id="AnalyzeAll" class="ui.MyToolWindowAction" text="Analyze All">
            </action>
            <action id="Customize" class="ui.CustomizeAction" text="Customize">
            </action>
        </group>
      <action id="MessageChain" class="detecting.MessageChain" text="MessageChain"
        description="MessageChain">
        <add-to-group group-id="MainMenu" anchor="first"/>
      </action>
      <action id="DetectLargeClassMethod" class="detecting.DetectLargeClassMethod"
        text="DetectLargeClassMethod" description="DetectLargeClassMethod">
        <add-to-group group-id="MainMenu" anchor="first"/>
      </action>
        <action id="DetectLargeClassField" class="detecting.DetectLargeClassField"
          text="DetectLargeClassField" description="DetectLargeClassField">
            <add-to-group group-id="MainMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>